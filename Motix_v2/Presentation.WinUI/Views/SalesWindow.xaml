<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Motix_v2.Presentation.WinUI.Views.SalesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Motix_v2.Presentation.WinUI.Views"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Motix">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Fila superior -->
            <RowDefinition Height="Auto"/>
            <!-- Fila horizontal -->
            <RowDefinition Height="*"/>
            <!-- Contenido principal -->
        </Grid.RowDefinitions>

        <!-- Fila superior: un Grid con estilo "TopRowGridStyle" -->
        <Border x:Name="AppTitleBar" Grid.Row="0" Style="{StaticResource TopRowGridStyle}">
            <controls:MenuBar HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <controls:MenuBarItem Title="Archivo">
                    <controls:MenuFlyoutItem Text="Reparto"   Click="Reparto_Click"/>
                    <controls:MenuFlyoutItem Text="Documentos" Click="Documentos_Click"/>
                    <controls:MenuFlyoutItem Text="Stock"     Click="Stock_Click"/>
                    <controls:MenuFlyoutItem Text="Login"     Click="Login_Click"/>
                </controls:MenuBarItem>
                <controls:MenuBarItem Title="Editar" />
                <controls:MenuBarItem Title="Salir" />
            </controls:MenuBar>
        </Border>

        <!-- Fila horizontal de 10 botones: un StackPanel con estilo "HorizontalButtonsPanelStyle" -->
        <Grid Grid.Row="1" Style="{StaticResource HorizontalButtonsPanelStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Spacing="0">
                <!-- Cada botón con estilo "HorizontalButtonStyle" -->
                <!-- 1. Albarán -->
                <Button Style="{StaticResource HorizontalButtonStyle}"
                    ToolTipService.ToolTip="Albarán">
                    <Image Source="ms-appx:///Assets/Albaran.png" Style="{StaticResource HorizontalImageStyle}" />
                </Button>
                <!-- 1. Factura -->
                <Button Style="{StaticResource HorizontalButtonStyle}"
                    ToolTipService.ToolTip="Factura">
                    <Image Source="ms-appx:///Assets/Factura.png" Style="{StaticResource HorizontalImageStyle}" />
                </Button>
                <!-- 1. Pedido -->
                <Button Style="{StaticResource HorizontalButtonStyle}"
                    ToolTipService.ToolTip="Pedido">
                    <Image Source="ms-appx:///Assets/Pedido.png" Style="{StaticResource HorizontalImageStyle}" />
                </Button>
                <!-- 1. Presupuesto -->
                <Button Style="{StaticResource HorizontalButtonStyle}"
                    ToolTipService.ToolTip="Presupuesto">
                    <Image Source="ms-appx:///Assets/Presupuesto.png" Style="{StaticResource HorizontalImageStyle}" />
                </Button>
                <Button Content="Nuevo" Style="{StaticResource HorizontalButtonStyle}"/>
                <Button Content="Buscar Albaranes" Style="{StaticResource HorizontalButtonStyle}"/>
                <Button Content="Buscar piezas" Style="{StaticResource HorizontalButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Área principal -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Contenido a la izquierda -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="Transparent">
                    <!-- Contenido a la izquierda -->
                    <Grid Grid.Column="0">
                        <!-- 1) Cambiamos la primera fila a Auto para que se ajuste al contenido -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- antes era "*" -->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 2) Nuevo bloque superior con Document y Date -->
                        <Border Grid.Row="0" Background="#E5E6FA" Padding="8">
                            <StackPanel
                              Orientation="Horizontal"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Spacing="16">

                                <!-- Grupo Documento -->
                                <TextBlock
                                x:Name="TextBlockDocument"
                                Text="DOCUMENTO"
                                Style="{StaticResource TextBlockHeader}"/>
                                <TextBox
                                x:Name="TextBoxDocument"
                                IsEnabled="False"
                                Width="200"
                                VerticalAlignment="Center"/>

                                <!-- Grupo Fecha -->
                                <TextBlock
                                Text="FECHA"
                                Style="{StaticResource TextBlockHeader}"
                                Margin="50, 0, 0, 0"/>
                                <TextBox
                                x:Name="TextBoxDate"
                                IsEnabled="False"
                                Width="200"
                                VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- 2) Unificamos Intermedia+Inferior -->
                        <Border Grid.Row="1" Background="#E5E6FA" Padding="8">
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <!-- Izquierda: controles -->
                                    <ColumnDefinition Width="3*"/>
                                    <!-- Derecha: placeholder verde -->
                                    <ColumnDefinition Width="7*"/>
                                </Grid.ColumnDefinitions>

                                <!-- IZQUIERDA: Crédito/Contado y Cargo/Abono, centrados -->
                                <StackPanel
                                  Grid.Column="0"
                                  Orientation="Horizontal"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Spacing="32">

                                    <!-- Grupo Crédito -->
                                    <StackPanel Orientation="Vertical" Spacing="4" Style="{StaticResource StackPanelGroupButtons}">
                                        <Button Content="CREDITO" Style="{StaticResource GroupButtonStyle}" />
                                        <Button Content="CONTADO" Style="{StaticResource GroupButtonStyle}" />
                                    </StackPanel>

                                    <!-- Grupo Cargo -->
                                    <StackPanel Orientation="Vertical" Spacing="4" Style="{StaticResource StackPanelGroupButtons}">
                                        <Button Content="CARGO" Style="{StaticResource GroupButtonStyle}" />
                                        <Button Content="ABONO" Style="{StaticResource GroupButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>

                                <Border
                                Grid.Column="1"
                                Background="#B0C4DD"
                                CornerRadius="4"
                                Margin="4"
                                Padding="8">

                                    <Grid RowSpacing="8" ColumnSpacing="16">
                                        <!-- Dos columnas iguales -->
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Cuatro filas -->
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <!-- ID / Name -->
                                            <RowDefinition Height="Auto"/>
                                            <!-- Address -->
                                            <RowDefinition Height="Auto"/>
                                            <!-- Phone / CIF -->
                                            <RowDefinition Height="Auto"/>
                                            <!-- Email -->
                                        </Grid.RowDefinitions>

                                        <!-- Fila 0: Client ID -->
                                        <Grid Grid.Row="0" Grid.Column="0" ColumnSpacing="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="5*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                            x:Name="TextBlockClientId"
                                            Text="Client ID:"
                                            FontWeight="Bold"
                                            VerticalAlignment="Center"
                                            Grid.Column="0"/>
                                            <TextBox
                                            x:Name="TextBoxClientId"
                                            IsEnabled="True"
                                            HorizontalAlignment="Stretch"
                                            Grid.Column="1"/>
                                        </Grid>

                                        <!-- Fila 0: Name -->
                                        <Grid Grid.Row="0" Grid.Column="1" ColumnSpacing="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="5*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                            x:Name="TextBlockName"
                                            Text="Name:"
                                            FontWeight="Bold"
                                            VerticalAlignment="Center"
                                            Grid.Column="0"/>
                                            <TextBox
                                            x:Name="TextBoxName"
                                            IsEnabled="True"
                                            HorizontalAlignment="Stretch"
                                            Grid.Column="1"/>
                                        </Grid>

                                        <!-- Fila 1: Address (span 2 cols) -->
                                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" ColumnSpacing="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="11*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                            x:Name="TextBlockAddress"
                                            Text="Address:"
                                            FontWeight="Bold"
                                            VerticalAlignment="Center"
                                            Grid.Column="0"/>
                                            <TextBox
                                            x:Name="TextBoxAddress"
                                            IsEnabled="True"
                                            HorizontalAlignment="Stretch"
                                            Grid.Column="1"/>
                                        </Grid>

                                        <!-- Fila 2: Phone -->
                                        <Grid Grid.Row="2" Grid.Column="0" ColumnSpacing="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="5*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                            x:Name="TextBlockPhone"
                                            Text="Phone:"
                                            FontWeight="Bold"
                                            VerticalAlignment="Center"
                                            Grid.Column="0"/>
                                            <TextBox
                                            x:Name="TextBoxPhone"
                                            IsEnabled="True"
                                            HorizontalAlignment="Stretch"
                                            Grid.Column="1"/>
                                        </Grid>

                                        <!-- Fila 2: CIF/NIF -->
                                        <Grid Grid.Row="2" Grid.Column="1" ColumnSpacing="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="5*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                            x:Name="TextBlockCifNif"
                                            Text="CIF/NIF:"
                                            FontWeight="Bold"
                                            VerticalAlignment="Center"
                                            Grid.Column="0"/>
                                            <TextBox
                                            x:Name="TextBoxCifNif"
                                            IsEnabled="True"
                                            HorizontalAlignment="Stretch"
                                            Grid.Column="1"/>
                                        </Grid>

                                        <!-- Fila 3: Email (span 2 cols) -->
                                        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" ColumnSpacing="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="11*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                            x:Name="TextBlockEmail"
                                            Text="Email:"
                                            FontWeight="Bold"
                                            VerticalAlignment="Center"
                                            Grid.Column="0"/>
                                            <TextBox
                                            x:Name="TextBoxEmail"
                                            IsEnabled="True"
                                            HorizontalAlignment="Stretch"
                                            Grid.Column="1"/>
                                        </Grid>

                                    </Grid>
                                </Border>

                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Background="Black"/>
                <!-- Sección Intermedia -->
                <Border
                  Grid.Row="2"
                  Grid.ColumnSpan="2"
                  Background="Transparent"
                  Padding="8">

                </Border>

                <Border Grid.Row="3" Background="Black"/>
                <Border Grid.Row="4" Background="Transparent">
                    <TextBlock Text="Sección Inferior" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>

            <!-- Columna vertical de 10 botones, con estilo "VerticalButtonsPanelStyle" -->
            <Grid Grid.Column="1" Style="{StaticResource VerticalButtonsPanelStyle}" VerticalAlignment="Stretch">
                <!-- StackPanel que centra verticalmente los botones -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Cada botón con estilo "VerticalButtonStyle" -->
                    <Button Content="1" Style="{StaticResource VerticalButtonStyle}"/>
                    <Button Content="2" Style="{StaticResource VerticalButtonStyle}"/>
                    <Button Content="3" Style="{StaticResource VerticalButtonStyle}"/>
                    <Button Content="4" Style="{StaticResource VerticalButtonStyle}"/>
                    <Button Content="5" Style="{StaticResource VerticalButtonStyle}"/>
                    <Button Content="6" Style="{StaticResource VerticalButtonStyle}"/>
                    <Button Content="7" Style="{StaticResource VerticalButtonStyle}"/>
                    <Button Content="8" Style="{StaticResource VerticalButtonStyle}"/>
                    <Button Content="9" Style="{StaticResource VerticalButtonStyle}"/>
                    <Button Content="10" Style="{StaticResource VerticalButtonStyle}"/>
                </StackPanel>
            </Grid>

        </Grid>
    </Grid>
</Window>
