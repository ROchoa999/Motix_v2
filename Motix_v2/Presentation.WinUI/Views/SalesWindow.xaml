<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Motix_v2.Presentation.WinUI.Views.SalesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Motix_v2.Presentation.WinUI.Views"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:ct="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:data="using:Motix_v2.Presentation.WinUI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Motix">

    <Grid x:Name="layoutRoot" Loaded="SalesWindow_Loaded" DataContext="{x:Bind ViewModel, Mode=OneWay}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Fila superior -->
            <RowDefinition Height="Auto"/>
            <!-- Fila horizontal -->
            <RowDefinition Height="*"/>
            <!-- Contenido principal -->
        </Grid.RowDefinitions>

        <!-- Fila superior: un Grid con estilo "TopRowGridStyle" -->
        <Border x:Name="AppTitleBar" Grid.Row="0" Style="{StaticResource TopRowGridStyle}">
            <controls:MenuBar HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <controls:MenuBarItem Title="Archivo">
                    <controls:MenuFlyoutItem Text="Reparto"   Click="Reparto_Click"/>
                    <controls:MenuFlyoutItem Text="Documentos" Click="Documentos_Click"/>
                    <controls:MenuFlyoutItem Text="Stock"     Click="Stock_Click"/>
                    <controls:MenuFlyoutItem Text="Login"     Click="Login_Click"/>
                </controls:MenuBarItem>
                <controls:MenuBarItem Title="Editar" />
                <controls:MenuBarItem Title="Salir" />
            </controls:MenuBar>
        </Border>

        <!-- Fila horizontal de 10 botones: un StackPanel con estilo "HorizontalButtonsPanelStyle" -->
        <Grid Grid.Row="1" Style="{StaticResource HorizontalButtonsPanelStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Spacing="0">
                <!-- Cada botón con estilo "HorizontalButtonStyle" -->
                <!-- 1. Albarán -->
                <Button Style="{StaticResource HorizontalButtonStyle}"
                    x:Name="ButtonAlbaran"
                    ToolTipService.ToolTip="Albarán"
                    Click="ButtonAlbaran_Click">
                    <Image Source="ms-appx:///Assets/Albaran.png" Style="{StaticResource ButtonImageStyle}" />
                </Button>
                <!-- 1. Factura -->
                <Button Style="{StaticResource HorizontalButtonStyle}"
                    ToolTipService.ToolTip="Factura">
                    <Image Source="ms-appx:///Assets/Factura.png" Style="{StaticResource ButtonImageStyle}" />
                </Button>
                <!-- 1. Pedido -->
                <Button Style="{StaticResource HorizontalButtonStyle}"
                    ToolTipService.ToolTip="Pedido">
                    <Image Source="ms-appx:///Assets/Pedido.png" Style="{StaticResource ButtonImageStyle}" />
                </Button>
                <!-- 1. Presupuesto -->
                <Button Style="{StaticResource HorizontalButtonStyle}"
                    ToolTipService.ToolTip="Presupuesto">
                    <Image Source="ms-appx:///Assets/Presupuesto.png" Style="{StaticResource ButtonImageStyle}" />
                </Button>
                <Button Content="Nuevo" Style="{StaticResource HorizontalButtonStyle}"/>
                <Button Content="Buscar Albaranes" Style="{StaticResource HorizontalButtonStyle}"/>
                <Button Content="Buscar piezas" Style="{StaticResource HorizontalButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Área principal -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Contenido a la izquierda -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="Transparent">
                    <!-- Contenido a la izquierda -->
                    <Grid Grid.Column="0">
                        <!-- 1) Cambiamos la primera fila a Auto para que se ajuste al contenido -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- antes era "*" -->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 2) Nuevo bloque superior con Document y Date -->
                        <Border Grid.Row="0" Background="#E5E6FA" Padding="8">
                            <StackPanel
                              Orientation="Horizontal"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Spacing="16">

                                <!-- Grupo Documento -->
                                <TextBlock
                                x:Name="TextBlockDocument"
                                Text="DOCUMENTO"
                                Style="{StaticResource TextBlockHeader}"/>
                                <TextBox
                                x:Name="TextBoxDocument"
                                IsEnabled="False"
                                Width="200"
                                VerticalAlignment="Center"/>

                                <!-- Grupo Fecha -->
                                <TextBlock
                                Text="FECHA"
                                Style="{StaticResource TextBlockHeader}"
                                Margin="50, 0, 0, 0"/>
                                <TextBox
                                x:Name="TextBoxDate"
                                IsEnabled="False"
                                Width="200"
                                VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- 2) Unificamos Intermedia+Inferior -->
                        <Border Grid.Row="1" Background="#E5E6FA" Padding="8">
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <!-- Derecha: placeholder verde -->
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>


                                <Border
                                    Grid.Column="0"
                                    Background="#B0C4DD"
                                    CornerRadius="4"
                                    Margin="4"
                                    Padding="8">

                                    <Grid RowSpacing="8" ColumnSpacing="16">
                                        <!-- Dos columnas iguales -->
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Cuatro filas -->
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <!-- ID / Name -->
                                            <RowDefinition Height="Auto"/>
                                            <!-- Address -->
                                            <RowDefinition Height="Auto"/>
                                            <!-- Phone / CIF -->
                                            <RowDefinition Height="Auto"/>
                                            <!-- Email -->
                                        </Grid.RowDefinitions>

                                        <!-- Fila 0: Client ID -->
                                        <Grid Grid.Row="0" Grid.Column="0" ColumnSpacing="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="5*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                x:Name="TextBlockClientId"
                                                Text="Id Cliente:"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"
                                                Grid.Column="0"/>
                                            <TextBox
                                                x:Name="TextBoxClientId"
                                                Text="{x:Bind ViewModel.SearchClientId, Mode=TwoWay}"
                                                IsEnabled="True"
                                                HorizontalAlignment="Stretch"
                                                Grid.Column="1"/>
                                        </Grid>

                                        <!-- Fila 0: Name -->
                                        <Grid Grid.Row="0" Grid.Column="1" ColumnSpacing="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="5*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                x:Name="TextBlockName"
                                                Text="Nombre:"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"
                                                Grid.Column="0"/>
                                            <TextBox
                                                x:Name="TextBoxName"
                                                Text="{x:Bind ViewModel.SearchName, Mode=TwoWay}"
                                                IsEnabled="True"
                                                HorizontalAlignment="Stretch"
                                                Grid.Column="1"/>
                                        </Grid>

                                        <!-- Fila 1: Address (span 2 cols) -->
                                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" ColumnSpacing="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="11*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                x:Name="TextBlockAddress"
                                                Text="Dirección:"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"
                                                Grid.Column="0"/>
                                            <TextBox
                                                x:Name="TextBoxAddress"
                                                IsReadOnly="True"
                                                IsTabStop="False"
                                                HorizontalAlignment="Stretch"
                                                Grid.Column="1"/>
                                        </Grid>

                                        <!-- Fila 2: Phone -->
                                        <Grid Grid.Row="2" Grid.Column="0" ColumnSpacing="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="5*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                x:Name="TextBlockPhone"
                                                Text="Teléfono:"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"
                                                Grid.Column="0"/>
                                            <TextBox
                                                x:Name="TextBoxPhone"
                                                Text="{x:Bind ViewModel.SearchPhone, Mode=TwoWay}"
                                                IsEnabled="True"
                                                HorizontalAlignment="Stretch"
                                                Grid.Column="1"/>
                                        </Grid>

                                        <!-- Fila 2: CIF/NIF -->
                                        <Grid Grid.Row="2" Grid.Column="1" ColumnSpacing="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="5*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                x:Name="TextBlockCifNif"
                                                Text="CIF/NIF:"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"
                                                Grid.Column="0"/>
                                            <TextBox
                                                x:Name="TextBoxCifNif"
                                                Text="{x:Bind ViewModel.SearchCifNif, Mode=TwoWay}"
                                                IsEnabled="True"
                                                HorizontalAlignment="Stretch"
                                                Grid.Column="1"/>
                                        </Grid>

                                        <!-- Fila 3: Email (span 2 cols) -->
                                        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" ColumnSpacing="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="11*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                x:Name="TextBlockEmail"
                                                Text="Email:"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"
                                                Grid.Column="0"/>
                                            <TextBox
                                                x:Name="TextBoxEmail"
                                                Text="{x:Bind ViewModel.SearchEmail, Mode=TwoWay}"
                                                IsEnabled="True"
                                                HorizontalAlignment="Stretch"
                                                Grid.Column="1"/>
                                        </Grid>

                                    </Grid>
                                </Border>

                                <Button
                                    Grid.Column="1"
                                    x:Name="ButtonSearch"
                                    Click="ButtonSearch_Click"
                                    Content="Buscar"
                                    Width="100"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="4, 10, 4, 4"/>

                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Sección Intermedia -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Row="0">
                        <ct:DataGrid
                            x:Name="DataGridResults"
                            ColumnWidth="*"
                            MinColumnWidth="100"
                            Grid.ColumnSpan="2"
                            ItemsSource="{x:Bind ViewModel.Items}"
                            AutoGenerateColumns="True"
                            IsReadOnly="True"
                            Margin="4"/>
                    </Border>

                    <StackPanel
                        Grid.Column="1"
                        Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="8"
                        Padding="4">

                        <Button
                            x:Name="ButtonAddLine"
                            Style="{StaticResource DataGridButtonStyle}"
                            ToolTipService.ToolTip="Añadir línea">
                            <Image
                                Source="ms-appx:///Assets/add.png"
                                Style="{StaticResource ButtonImageStyle}" />
                        </Button>

                        <Button
                            x:Name="ButtonEditLine"
                            Style="{StaticResource DataGridButtonStyle}"
                            ToolTipService.ToolTip="Editar línea">
                            <Image
                                Source="ms-appx:///Assets/edit.png"
                                Style="{StaticResource ButtonImageStyle}" />
                        </Button>

                        <Button
                            x:Name="ButtonRemoveLine"
                            Style="{StaticResource DataGridButtonStyle}"
                            ToolTipService.ToolTip="Eliminar línea">
                            <Image
                                Source="ms-appx:///Assets/substract.png"
                                Style="{StaticResource ButtonImageStyle}" />
                        </Button>

                    </StackPanel>


                </Grid>
                

                <Border Grid.Row="2" Background="Black"/>
                <Border Grid.Row="3" Background="Transparent">
                    <TextBlock Text="Sección Inferior" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>

        </Grid>
    </Grid>
</Window>
